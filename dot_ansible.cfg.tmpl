[defaults]
host_key_checking=False
{{ if eq .profile "personal" -}}
vault_identity_list=standard@~/.vault-pass.standard, privileged@~/.vault-pass.privileged, awx-config@~/.ansible/.vault-pass_ansible-controller-config
{{ else if eq .profile "work" -}}
vault_identity_list=standard@~/.sea-ansible-controller.standard, privileged@~/.sea-ansible-controller.privileged, adp-rke2-ansible@~/.adp-rke2-ansible.standard

[galaxy]
server_list = galaxy, redhat_cdn

[galaxy_server.redhat_cdn]
url=https://console.redhat.com/api/automation-hub/content/published/
auth_url=https://sso.redhat.com/auth/realms/redhat-external/protocol/openid-connect/token
token=X

[galaxy_server.galaxy]
url=https://galaxy.ansible.com/
{{- end }}
